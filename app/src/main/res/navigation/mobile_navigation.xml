<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/mobile_navigation"
	app:startDestination="@id/exploreFragment">

	<fragment
		android:id="@+id/sideDrawerFragment"
		android:name="xyz.tirtagt.matthew_kampus.utsmobileapps.SideDrawerFragment"
		android:label="fragment_side_drawer"
		tools:layout="@layout/fragment_side_drawer" >
		<action
			android:id="@+id/action_sideDrawerFragment_to_exploreFragment2"
			app:destination="@id/exploreFragment" />
		<action
			android:id="@+id/action_sideDrawerFragment_to_profileFragment2"
			app:destination="@id/profileFragment" />
		<action
			android:id="@+id/action_sideDrawerFragment_to_settingsFragment"
			app:destination="@id/settingsFragment" />
	</fragment>
	<fragment
		android:id="@+id/exploreFragment"
		android:name="xyz.tirtagt.matthew_kampus.utsmobileapps.ExploreFragment"
		android:label="fragment_explore"
		tools:layout="@layout/fragment_explore" >
		<action
			android:id="@+id/action_exploreFragment_to_sideDrawerFragment"
			app:destination="@id/sideDrawerFragment" />
	</fragment>
	<fragment
		android:id="@+id/profileFragment"
		android:name="xyz.tirtagt.matthew_kampus.utsmobileapps.ProfileFragment"
		android:label="fragment_profile"
		tools:layout="@layout/fragment_profile" />
	<fragment
		android:id="@+id/settingsFragment"
		android:name="xyz.tirtagt.matthew_kampus.utsmobileapps.SettingsFragment"
		android:label="fragment_settings"
		tools:layout="@layout/fragment_settings" />

</navigation>