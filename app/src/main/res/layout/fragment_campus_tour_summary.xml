<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="220dp"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/ExploreItem_title"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="0.6"
				android:padding="10dp"
				android:text="Summary of your tour to [ Campus Name ]"
				android:textSize="28sp"
				android:textStyle="bold" />

			<ImageView
				android:id="@+id/ExploreItem_image"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_marginStart="16dp"
				android:layout_marginEnd="16dp"
				android:layout_weight="0.3"
				app:srcCompat="@drawable/ic_menu_camera" />
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginStart="10dp"
			android:layout_marginTop="20dp"
			android:layout_marginEnd="10dp"
			android:orientation="vertical">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Do you want to purchase meals?"
				android:textSize="18sp"
				android:textStyle="bold" />

			<Switch
				android:layout_width="48dp"
				android:layout_height="48dp"
				android:layout_marginTop="8dp"
				android:layout_marginBottom="8dp" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Do you have allergies ?"
				android:textSize="18sp"
				android:textStyle="bold" />

			<Switch
				android:layout_width="48dp"
				android:layout_height="48dp"
				android:layout_marginTop="8dp"
				android:layout_marginBottom="8dp" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Terms and Conditions"
				android:textSize="18sp"
				android:textStyle="bold" />

			<CheckBox
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:layout_marginBottom="8dp"
				android:text="By clicking this button you are accepting our terms and conditions"
				android:textSize="16sp" />

			<Button
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="bottom|center_horizontal"
				android:layout_marginStart="30dp"
				android:layout_marginTop="24dp"
				android:layout_marginEnd="30dp"
				android:text="Confirm booking" />

		</LinearLayout>

	</LinearLayout>
</FrameLayout>